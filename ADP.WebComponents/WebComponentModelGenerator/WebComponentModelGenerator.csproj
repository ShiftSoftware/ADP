<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.14.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\ADP.LookupServices\Lookup.Services\Lookup.Services.csproj" />
	</ItemGroup>

	<Target Name="RunSelfAfterBuild" AfterTargets="Build">
		<Exec Command='dotnet "$(TargetPath)"' />
	</Target>

	<Target Name="SetupYarnDeps" AfterTargets="Build">
		<Exec Command='where yarn || npm install -g yarn' />

		<Exec Command='yarn install' WorkingDirectory='$(MSBuildThisFileDirectory)..\adp-web-components' />

		<!-- Step 3: Run "yarn" at the Git root -->
		<Exec Command='yarn install' WorkingDirectory='$(MSBuildThisFileDirectory)..\..\..\' />
	</Target>

</Project>